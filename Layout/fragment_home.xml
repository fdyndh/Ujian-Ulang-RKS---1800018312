<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/gbr_2"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:src="@drawable/jne" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/topup"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="360dp"
        android:layout_marginTop="205dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_top_up_24" />

    <ImageButton
        android:id="@+id/scan"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="330dp"
        android:layout_marginTop="205dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_baseline_qr_code_scanner_24" />

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="205dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_baseline_search_24" />

    <EditText android:id="@+id/cari_resi"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:background="@color/grey1"
        android:hint="Masukkan Nomor Resi"
        android:padding="10dp"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="300dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp">

            <ImageButton
                android:id="@+id/img_btn1"
                android:background="@drawable/custom_img_btn1"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:scaleType="centerInside"
                android:src="@drawable/digital_wallet" />

            <ImageButton
                android:id="@+id/img_btn2"
                android:background="@drawable/custom_img_btn1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/myjob" />

            <ImageButton
                android:id="@+id/img_btn3"
                android:background="@drawable/custom_img_btn1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/shipment" />

            <ImageButton
                android:id="@+id/img_btn4"
                android:background="@drawable/custom_img_btn1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/price_tags" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp" >

        <ImageButton
            android:id="@+id/img_5"
            android:background="@drawable/custom_img_btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/nearby" />

        <ImageButton
            android:id="@+id/img_btn6"
            android:background="@drawable/custom_img_btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/token" />

        <ImageButton
            android:id="@+id/img_btn7"
            android:background="@drawable/custom_img_btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/chat" />

        <ImageButton
            android:id="@+id/img_btn8"
            android:background="@drawable/custom_img_btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/more" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="500dp"
        android:layout_marginLeft="45dp" >

        <ImageView
            android:id="@+id/gbr_1"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butuh bantuan? Joni siap membantu"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask Joni"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="10dp" />

    </LinearLayout>


</RelativeLayout>